<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:onClick="refresh"/>
    <com.tianzhuan.healthstatusview.HealthStatusView
        android:id="@+id/hsView"
        android:background="#273248"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:pointer_width="2dp"
        app:pointer_length="12dp"
        app:evaluate_size="12sp"
        app:evaluate_background_color="#1affffff"
        app:health_index_size="14sp"
        app:score_size="40sp"
        app:score_unit_size="12dp"
        app:health_index_color="@android:color/darker_gray"
        app:title_colr="#ffffff"
        />

</LinearLayout>